[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    chroma_db
max-complexity = 25
# Per-file ignores
per-file-ignores =
    # app.py: E402 due to warnings filter that must come before imports
    backend/app.py:E402,F811
    # __init__.py: F401 unused imports are often intentional for package exports
    */__init__.py:F401
    # Test files: F401 (fixtures), F841 (mock variables), E402 (test setup)
    backend/tests/*.py:F401,F841,E402
